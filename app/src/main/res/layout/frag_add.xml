<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.example.notesmasteer.fragment.add.AddViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintAdd"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tvSave"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/orange_color_picker"
                android:text="Lưu lại"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivNotification"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:tint="@color/orange_color_picker"
                android:layout_toLeftOf="@id/ivMore"
                android:src="@drawable/ic_alarm_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivChangeBG"
                android:padding="10dp"
                android:tint="@color/orange_color_picker"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/ivNotification"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivMore"
                android:padding="10dp"
                android:visibility="gone"
                android:tint="@color/orange_color_picker"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/actionBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textview_size_conten"
                android:padding="@dimen/padding_Frag_edit"
                app:layout_constraintTop_toBottomOf="@id/actionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtTitle"
                android:background="@null"
                android:singleLine="true"
                android:textSize="@dimen/textview_size_conten"
                android:padding="@dimen/padding_Frag_edit"
                app:layout_constraintTop_toBottomOf="@id/actionBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollview"
            android:padding="@dimen/padding_Frag_edit"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTitle">

            <EditText
                android:id="@+id/edtNote"
                android:hint="@string/hintNoteSample"
                android:background="@null"
                android:inputType="textMultiLine"
                android:textSize="@dimen/textview_size_conten"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>