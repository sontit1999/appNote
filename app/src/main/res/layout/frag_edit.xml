<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.notesmasteer.fragment.edit.EditViewModel" />
        <variable
            name="note"
            type="com.example.notesmasteer.model.Note" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/ivBack"
                android:padding="10dp"
                android:tint="@color/orange_color_picker"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivShare"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:tint="@color/orange_color_picker"
                android:layout_toLeftOf="@id/ivMore"
                android:src="@drawable/ic_file_upload_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivChangeBG"
                android:padding="10dp"
                android:visibility="gone"
                android:tint="@color/orange_color_picker"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/ivShare"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivMore"
                android:tint="@color/orange_color_picker"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvTime"
            android:text="@{note.timeCreate}"
            android:layout_margin="15dp"
            android:textSize="@dimen/textview_size_conten"
            android:padding="@dimen/padding_Frag_edit"
            app:layout_constraintTop_toBottomOf="@id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textview_size_conten"
                android:padding="@dimen/padding_Frag_edit"
                app:layout_constraintTop_toBottomOf="@id/actionBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtTitle"
                android:text="@{note.title}"
                android:background="@null"
                android:singleLine="true"
                android:textSize="@dimen/textview_size_conten"
                android:padding="@dimen/padding_Frag_edit"
                app:layout_constraintTop_toBottomOf="@id/actionBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollview"
            android:padding="@dimen/padding_Frag_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTitle">

            <EditText
                android:id="@+id/edtNote"
                android:background="@null"
                android:text="@{note.content}"
                android:inputType="textMultiLine"
                android:textSize="@dimen/textview_size_conten"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>